{
  "manifest_version": 3,
  "name": "Prerender Tweaks",
  "version": "1.5.2",

  "action": {
    "default_title": "Prerender Tweeks",
    "default_popup": "popup.html"
  },
  "description": "This extension dramatically speeds up navigation by adding speculationrules to trigger prerendering, based on user actions.",
  "icons": {
    "32": "icons/32.png",
    "64": "icons/64.png",
    "128": "icons/128.png"
  },

  "background": {
    "service_worker": "main.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content_top.js"
      ],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "declarative_net_request" : {
    "rule_resources": [{
      "id": "loading_mode_rules",
      "enabled": false,
      "path": "loading_mode_rules.json"
    }]
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "permissions": [
    "contextMenus",
    "declarativeNetRequestWithHostAccess",
    "storage",
    "tabs"
  ]
}
